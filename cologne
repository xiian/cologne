#!/usr/bin/env php
<?php
foreach (array(__DIR__ . '/../../autoload.php', __DIR__ . '/../vendor/autoload.php', __DIR__ . '/vendor/autoload.php', null) as $file) {
    if (file_exists($file)) {
        require($file);
        break;
    }
}

if (is_null($file)) {
    die('Composer aint installed right.' . PHP_EOL);
}

//Run the damn thing
use Symfony\Component\Console\Application;
$application = new Application();
$application->add(new \Cologne\Commands\RunCommand);
$application->add(new \Cologne\Commands\DiffCommand);
$application->add(new \Cologne\Commands\CheckstyleCommand);
$application->run();
